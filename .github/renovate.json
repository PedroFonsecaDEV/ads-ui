{
  "extends": [
    "local>brave/renovate-config",
    "config:js-app",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "npm:unpublishSafe",
    "helpers:pinGitHubActionDigests",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["minor", "major", "patch"],
      "schedule": ["* 0-8 * * 1,4"]
    },
    {
      "matchDepTypes": ["pnpm.overrides"],
      "enabled": false
    }
  ]
}
